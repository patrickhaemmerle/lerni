<div class="panel panel-primary">
    <div class="panel-heading">New Box</div>
    <div class="panel-body">
        <%= simple_form_for @create_box_action, url: boxes_path do |f|%>
            <%= f.input :name %>
            <%= f.button :submit, "Create", class: "btn-primary" %>
            <%= link_to "Cancel", boxes_path, class: "btn btn-default" %>
        <% end %>
    </div>
</div>
